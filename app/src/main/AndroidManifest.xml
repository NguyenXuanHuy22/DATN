<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DATN"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name=".ReviewListScreen"
            android:exported="false"
            android:label="@string/title_activity_review_list_screen"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".OrderDetailActivity"
            android:exported="false"
            android:label="Chi tiết đơn hàng"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".ChangePassword"
            android:exported="false"
            android:label="ChangePassword"
            android:theme="@style/Theme.DATN"/>
        <activity
            android:name=".ReviewActivity"
            android:exported="false"
            android:label="ReviewActivity"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".AddressScreen"
            android:exported="false"
            android:label="@string/title_activity_address_screen"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".OrderHistoryScreen"
            android:exported="false"
            android:label="@string/title_activity_order_history_screen"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".OrderScreen"
            android:exported="true"
            android:label="@string/title_activity_order_screen"
            android:theme="@style/Theme.DATN"
            android:launchMode="singleTop">

            <!-- Deep link để ZaloPay redirect về app -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="myapp" android:host="payment" />
            </intent-filter>

        </activity>

        <activity
            android:name=".BannerManager"
            android:exported="false"
            android:label="@string/title_activity_banner_manager_screen"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".CartScreen"
            android:exported="false"
            android:label="@string/title_activity_cart_screen"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".SearchActivity"
            android:exported="false"
            android:label="Search"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".ProductDetail"
            android:exported="false"
            android:label="@string/title_activity_product_detail"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".Favorite"
            android:exported="false"
            android:label="Favorite"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".LoginScreen"
            android:exported="false"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".RegisterScreen"
            android:exported="false"
            android:label="@string/title_activity_register_screen"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".Account"
            android:exported="false"
            android:label="Account"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".EditProfile"
            android:exported="false"
            android:label="EditProfile"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".IntroScreen"
            android:exported="false"
            android:label="@string/title_activity_intro_screen"
            android:theme="@style/Theme.DATN" />
        <activity
            android:name=".Home"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.DATN" />

        <!-- 🔹 Khai báo thêm VNPayWebViewActivity -->
        <activity
            android:name=".ZaloPayWebViewActivity"
            android:exported="false"
            android:theme="@style/Theme.DATN" />



        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DATN">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
